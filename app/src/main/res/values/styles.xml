<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StarListTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#eeeeee</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="StarListTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/white_bg</item>
        <item name="colorPrimaryDark">@color/white_bg</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#eeeeee</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="StarListTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <!--透明Dialog-->
    <style name="BaseDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CrashDialogActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="PreviewDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/sorder_preview_enter</item>
        <item name="android:windowExitAnimation">@anim/sorder_preview_exit</item>
    </style>

    <style name="ActionbarIcon">
        <item name="android:background">@drawable/selector_actionbar_icon_bk</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/actionbar_icon_padding</item>
    </style>

    <style name="ActionbarTab">
        <item name="android:background">@drawable/selector_actionbar_icon_bk</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionbarIcon_L">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/actionbar_icon_padding</item>
    </style>

    <style name="ActionbarTab_L">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionbarCloseIcon">
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="DrawsCustomDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/dialog_background</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="CustomDialogFragment">
        <item name="android:background">@drawable/shape_dlg_draggable</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="CustomDialogIcon">
        <item name="android:background">@drawable/selector_custom_dialog_icon_bk</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CustomDialogIcon_L">
        <item name="android:background">@drawable/selector_custom_dialog_icon_bk_l</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SlidingItemText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sliding_item_text_size</item>
        <item name="android:background">@drawable/ripple_rect_white</item>
        <item name="android:padding">@dimen/sliding_item_text_padding</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="GdbRecordTable">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="GdbRecommendDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="GdbRecommendFilterCheck">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="GdbRecommendFilterEdit">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="JJThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="JJThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="JJThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GdbGuideText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_gdb_guide_sec</item>
    </style>

    <style name="GdbRecommendActionIcon">
        <item name="android:layout_width">@dimen/gdb_recommend_action_size</item>
        <item name="android:layout_height">@dimen/gdb_recommend_action_size</item>
        <item name="android:padding">@dimen/gdb_recommend_action_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="GdbSeasonItem">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">@dimen/gdb_season_item_padding</item>
        <item name="android:background">@drawable/shape_folder_bk</item>
    </style>

    <style name="GdbSeasonItemBtn">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GdbGroupList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/shape_gdb_game_group_listbg</item>
        <item name="android:padding">2dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GdbGroupDownIconLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GdbGroupDownIcon">
        <item name="android:layout_width">@dimen/gdb_game_group_down_icon_size</item>
        <item name="android:layout_height">@dimen/gdb_game_group_down_icon_size</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/icon_download</item>
    </style>

    <style name="GameBattleCoachCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="GameBattleRoundIcon">
        <item name="android:layout_width">@dimen/game_battle_card_icon_size</item>
        <item name="android:layout_height">@dimen/game_battle_card_icon_size</item>
        <item name="android:padding">@dimen/game_battle_card_icon_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="GdbHomeStarText">
        <item name="android:layout_width">@dimen/gdb_home_star_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="GdbHomeStarImage">
        <item name="android:layout_width">@dimen/gdb_home_star_size</item>
        <item name="android:layout_height">@dimen/gdb_home_star_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="GroupWhiteSecOnBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="TvDlgVideoAction">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/video_actionbar_text_padding</item>
        <item name="android:paddingRight">@dimen/video_actionbar_text_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="IvTransDialogAction">
        <item name="android:layout_width">@dimen/actionbar_icon_width</item>
        <item name="android:layout_height">@dimen/actionbar_icon_width</item>
        <item name="android:padding">@dimen/actionbar_padding</item>
        <item name="android:background">@drawable/ripple_fullscreen_bk</item>
    </style>

    <style name="IvGdpSwipeIcon">
        <item name="android:layout_width">@dimen/actionbar_icon_width</item>
        <item name="android:layout_height">@dimen/actionbar_icon_width</item>
        <item name="android:padding">@dimen/actionbar_icon_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <dimen name="video_actionbar_text_padding">10dp</dimen>
</resources>
