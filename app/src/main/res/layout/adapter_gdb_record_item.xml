<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/record_container"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <com.github.siyamed.shapeimageview.BubbleImageView
            android:id="@+id/record_thumb"
            android:layout_width="@dimen/gdb_record_listitem_img_width"
            android:layout_height="@dimen/gdb_record_listitem_img_height"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            app:siArrowPosition="right"
            app:siSquare="false"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/group_file_info"
            android:layout_width="@dimen/gdb_record_listitem_img_width"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/record_thumb"
            android:layout_alignLeft="@id/record_thumb"
            android:orientation="vertical"
            android:background="#66000000"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_img_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_img_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/gdb_list_icon_play_size"
            android:layout_height="@dimen/gdb_list_icon_play_size"
            android:layout_alignRight="@id/record_thumb"
            android:layout_alignBottom="@id/record_thumb"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:padding="@dimen/gdb_list_icon_play_padding"
            android:src="@drawable/ic_play_arrow_white_36dp"
            android:background="@drawable/shape_oval_transgrey"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/record_seq"
            android:layout_width="@dimen/gdb_record_seq_width"
            android:layout_height="@dimen/gdb_record_seq_width"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gdb_shape_list_no"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/group_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gdb_record_name_left"
            android:layout_toRightOf="@id/record_thumb"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/record_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/gdb_record_main_text_size"/>

                <TextView
                    android:id="@+id/record_dir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/gdb_record_sub_text_size"/>

                <TextView
                    android:id="@+id/record_scene"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/gdb_record_sub_text_size"/>

                <LinearLayout
                    android:id="@+id/record_show_tablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/record_score_basic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/gdb_record_sub_text_size" />
                        <TextView
                            android:id="@+id/record_score_extra"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/gdb_record_sub_text_size" />
                        <TextView
                            android:id="@+id/record_score_actor"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/gdb_record_sub_text_size" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/record_score_fk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/gdb_record_sub_text_size"/>
                        <TextView
                            android:id="@+id/record_score_cum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/record_score_fk"
                            android:textSize="@dimen/gdb_record_sub_text_size"
                            android:layout_marginLeft="20dp"/>
                        <TextView
                            android:id="@+id/record_score_bjob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/record_score_cum"
                            android:textSize="@dimen/gdb_record_sub_text_size"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/record_score_fk_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/gdb_record_sub_text_size"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/record_star1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/gdb_record_sub_text_size" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VS"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:textSize="@dimen/gdb_record_sub_text_size"/>
                        <TextView
                            android:id="@+id/record_star2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/gdb_record_sub_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/record_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/record_score_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:layout_toLeftOf="@id/record_score"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_simplify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gdb_record_name_left"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/record_thumb"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_name_simplify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gdb_record_text_normal_light"
                android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_name_simplify"
                android:layout_marginTop="5dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gdb_record_text_normal_light_dim"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/tv_file_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/gdb_record_text_normal_light_dim"
                    android:textSize="12dp"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>