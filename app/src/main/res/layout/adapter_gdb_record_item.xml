<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/record_container"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/record_seq"
        android:layout_width="@dimen/gdb_record_seq_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />

    <com.github.siyamed.shapeimageview.BubbleImageView
        android:id="@+id/record_thumb"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/record_seq"
        android:visibility="gone"
        android:layout_centerVertical="true"
        app:siArrowPosition="right"
        app:siSquare="false"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gdb_record_name_left"
        android:layout_toRightOf="@id/record_thumb"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/record_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/record_score_fk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/gdb_record_sub_text_size"/>
            <TextView
                android:id="@+id/record_score_cum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/record_score_fk"
                android:textSize="@dimen/gdb_record_sub_text_size"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/record_score_bjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/record_score_cum"
                android:textSize="@dimen/gdb_record_sub_text_size"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/record_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/gdb_record_sub_text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="@dimen/gdb_record_sub_text_size"/>
            <TextView
                android:id="@+id/record_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/gdb_record_sub_text_size" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/record_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"/>
</RelativeLayout>