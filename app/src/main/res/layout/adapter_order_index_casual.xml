<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/sorder_casual_image"
        android:layout_height="@dimen/sorder_index_casual_item_size"
        android:layout_width="@dimen/sorder_index_casual_item_size"
        app:siBorderColor="@color/white"
        app:siBorderWidth="2dp"/>

    <TextView
        android:id="@+id/sorder_casual_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:maxWidth="@dimen/sorder_index_casual_text_width"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/sorder_index_casual_text_size"/>
</LinearLayout>