<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/download_exist_group"
    android:gravity="center" >
    <ImageView
        android:id="@+id/download_exist_image"
        android:layout_width="@dimen/download_exist_image_width"
        android:layout_height="@dimen/download_exist_image_height"
        android:scaleType="fitXY"/>
    <CheckBox
        android:id="@+id/download_exist_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"/>
    <TextView
        android:id="@+id/download_exist_name"
        android:layout_width="@dimen/download_exist_image_width"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@android:color/white"
        android:background="#66000000"
        android:gravity="center"
        android:layout_alignBottom="@id/download_exist_image"
        android:focusable="true"
        android:ellipsize="end"/>
</RelativeLayout>