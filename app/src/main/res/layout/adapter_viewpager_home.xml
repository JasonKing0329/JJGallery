<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/viewpager_home_previous"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:padding="20dp"
        android:background="@drawable/ripple_rect_white"
        android:src="@drawable/ic_indicator_previous"/>
    <TextView
        android:id="@+id/viewpager_home_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/actionbar_bk_orange"
        android:background="@drawable/ripple_rect_white"/>
    <ImageView
        android:id="@+id/viewpager_home_next"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:padding="20dp"
        android:background="@drawable/ripple_rect_white"
        android:src="@drawable/ic_indicator_next"/>
</LinearLayout>