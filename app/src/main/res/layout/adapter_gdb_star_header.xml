<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/gdb_star_header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gdb_star_header_height"
        android:background="@null">

        <ImageView
            android:id="@+id/gdb_star_header_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <com.allure.lbanners.LMBanners
            android:id="@+id/lmbanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:isGuide="false"
            app:auto_play="true"
            app:canLoop="true"
            app:durtion="5000"
            app:horizontal_transitionEffect="accordion"
            app:indicatorBottomPadding="10"
            app:indicator_position="bottom_mid"
            app:isVertical="false"
            app:scroll_duration="1000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_favor"
                android:layout_width="@dimen/gdb_record_icon_size"
                android:layout_height="@dimen/gdb_record_icon_size"
                android:padding="@dimen/gdb_record_icon_padding"
                android:src="@drawable/selector_favor_red_white"
                android:background="@drawable/shape_oval_transgrey"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="@dimen/gdb_record_icon_size"
                android:layout_height="@dimen/gdb_record_icon_size"
                android:padding="@dimen/gdb_record_icon_padding"
                android:src="@drawable/ic_settings_white_36dp"
                android:background="@drawable/shape_oval_transgrey"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:background="@drawable/bg_gdb_star_infor">
            <TextView
                android:id="@+id/gdb_star_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gdb_star_header_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/gdb_star_header_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/gdb_star_header_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/gdb_star_header_cscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
        </LinearLayout>

        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:background="#4c101215"
            android:orientation="vertical"
            android:paddingTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:text="zoom conclusion"/>
        </LinearLayout-->
    </RelativeLayout>
</LinearLayout>