<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/coach_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <RelativeLayout
            android:layout_width="@dimen/gdb_coach_item_size"
            android:layout_height="@dimen/gdb_coach_item_size">
            <ImageView
                android:id="@+id/coach_head"
                android:layout_width="@dimen/gdb_coach_item_size"
                android:layout_height="@dimen/gdb_coach_item_size"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/coach_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#99000000"
                android:textColor="@color/white"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/coach_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#99000000"
                android:textColor="@color/white"
                android:padding="5dp"/>
        </RelativeLayout>
        <com.jing.app.jjgallery.gdb.view.game.custom.CoachSeasonView
            android:id="@+id/coach_seasonview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gdb_coach_item_size"/>
    </LinearLayout>
</RelativeLayout>