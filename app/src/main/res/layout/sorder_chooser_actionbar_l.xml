<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView 
        style="@style/CustomDialogIcon_L"
       	android:id="@+id/order_chooser_add_order"
	    android:layout_width="@dimen/custom_dialog_toolbar_icon"
	    android:layout_height="@dimen/custom_dialog_toolbar_icon"
	    android:src="@drawable/button_add"/>
    <ImageView 
        style="@style/CustomDialogIcon_L"
       	android:id="@+id/order_chooser_color"
	    android:layout_width="@dimen/custom_dialog_toolbar_icon"
	    android:layout_height="@dimen/custom_dialog_toolbar_icon"
	    android:layout_marginLeft="5dp"
	    android:src="@drawable/actionbar_color_picker"/>
</LinearLayout>
