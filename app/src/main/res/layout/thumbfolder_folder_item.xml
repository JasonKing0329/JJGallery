<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/thumb_folder_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp" >
    <ImageView 
        android:id="@+id/thumb_folder_item_image"
	    android:layout_width="@dimen/thumbfolder_folderlist_cover_image_width"
	    android:layout_height="@dimen/thumbfolder_folderlist_cover_image_width"
	    android:scaleType="centerCrop"
	    android:src="?attr/default_folder"/>
    <TextView 
        android:id="@+id/thumb_folder_item_name"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"/>

</LinearLayout>
