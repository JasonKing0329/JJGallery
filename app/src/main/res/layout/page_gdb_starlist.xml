<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shizhefei.view.indicator.FixedIndicatorView
        android:id="@+id/gdb_star_indicator_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/actionbar_bk_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gdb_star_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jing.app.jjgallery.viewsystem.publicview.WaveSideBarView
            android:id="@+id/gdb_star_side_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>