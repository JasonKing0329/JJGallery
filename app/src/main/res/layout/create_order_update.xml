<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:orientation="vertical">
    
	    <TextView 
	        android:id="@+id/create_order_text1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:paddingLeft="5dp"
		    android:text="@string/tag"
		    android:textColor="@color/white"/>
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal"
			android:gravity="center_vertical">
		    <Spinner 
		        android:id="@+id/create_order_tag"
			    android:layout_width="@dimen/sorder_creater_divider_width"
			    android:layout_height="wrap_content"
			    android:spinnerMode="dropdown"
			    android:background="@drawable/tw_spinner_bk"/>
		    <TextView 
		        android:id="@+id/create_order_notag"
			    android:layout_width="@dimen/sorder_creater_divider_width"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:text="@string/sorder_no_tag"
		    	android:textColor="@color/white"
			    android:visibility="gone"/>
		    <EditText 
		        android:id="@+id/create_order_tag_edit"
			    android:layout_width="@dimen/sorder_creater_divider_width"
			    android:layout_height="@dimen/sorder_chooser_search_height"
			    android:paddingLeft="12dp"
			    android:background="@drawable/custom_dialog_search_bk"
				android:inputType="text"
				android:visibility="gone"/>
	    	<ImageView 
	    	    android:id="@+id/create_order_tag_add"
			    android:layout_width="@dimen/sorder_creater_icon_width"
			    android:layout_height="@dimen/sorder_creater_icon_width"
			    android:scaleType="fitCenter"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/actionbar_add"/>
	    	<ImageView 
	    	    android:id="@+id/create_order_tag_cancel"
			    android:layout_width="@dimen/sorder_creater_icon_width"
			    android:layout_height="@dimen/sorder_creater_icon_width"
			    android:scaleType="fitCenter"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/actionbar_cancel"
				android:visibility="gone"/>
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/create_order_text2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:paddingLeft="5dp"
		    android:textColor="@color/white"
		    android:text="@string/new_order_name"/>
	    
	    <EditText 
	        android:id="@+id/create_order_name"
		    android:layout_width="@dimen/sorder_creater_divider_width"
		    android:layout_height="@dimen/sorder_chooser_search_height"
		    android:layout_marginTop="5dp"
		    android:paddingLeft="12dp"
		    android:background="@drawable/custom_dialog_search_bk"
			android:inputType="text"/>

	    <CheckBox 
	        android:id="@+id/create_order_only_tag"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="20dp"
		    android:button="@drawable/checkbox_bk"
		    android:text="@string/sorder_only_new_tag"
		    android:textColor="@color/white"/>
</LinearLayout>
