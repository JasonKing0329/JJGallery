<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_page_filemanager">
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
		android:background="@color/transparent"
	    android:padding="@dimen/filelist_vertical_distance">
		<com.king.lib.jindicator.IndicatorView
			android:id="@+id/filelist_current_dir_hor"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			app:indicatorColor="@color/colorPrimary"
			app:indicatorColorPressed="@color/colorAccent"
			app:indicatorHeight="@dimen/path_indicator_height"
			app:textSize="14dp"/>
	    <RadioGroup
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_vertical"
	        >
	        <RadioButton 
	        	android:id="@+id/filelist_radio_all"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:checked="true"
			    android:text="@string/filelist_radio_all"
	            />
	        <RadioButton 
	        	android:id="@+id/filelist_radio_encrypted"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/filelist_radio_encrypted"
	            />
	        <RadioButton 
	        	android:id="@+id/filelist_radio_unencrypted"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/filelist_radio_unencrypted"
	            />
	    </RadioGroup>
	    <!--TextView 
	        android:id="@+id/filelist_current_dir_hor"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:padding="@dimen/filelist_vertical_distance"
		    android:textSize="@dimen/filelist_text_size"
	        /-->
	</LinearLayout>
	<com.king.lib.jindicator.IndicatorView
		android:id="@+id/filelist_current_dir"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:indicatorColor="@color/colorPrimary"
		app:indicatorColorPressed="@color/colorAccent"
		app:indicatorHeight="@dimen/path_indicator_height"
		app:textSize="14dp"/>
    <!-- TextView 
        android:id="@+id/filelist_current_dir"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:padding="@dimen/filelist_vertical_distance"
	    android:textSize="@dimen/filelist_text_size"
        / -->
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/filelist_vertical_distance"
	    android:gravity="center_vertical">
	    <ImageView 
	        android:id="@+id/filelist_parent"
		    android:layout_width="25dp"
		    android:layout_height="25dp"
		    android:visibility="invisible"
		    android:layout_marginLeft="@dimen/filelist_vertical_distance"
		    android:src="?attr/file_manager_upper"
		    android:scaleType="fitCenter"
	        />
        <ImageView 
	        android:id="@+id/filelist_tag_name_sorticon"
		    android:layout_width="@dimen/filelist_tag_text_size"
		    android:layout_height="@dimen/filelist_tag_text_size"
		    android:scaleType="fitCenter"
		    android:layout_marginLeft="15dp"
		    android:visibility="invisible"/>
        <TextView 
	        android:id="@+id/filelist_tag_name"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
	    	android:textSize="@dimen/filelist_tag_text_size"
		    android:text="@string/filelist_tag_name"/>
        
        <TextView 
	        android:id="@+id/filelist_tag_wh"
		    android:layout_width="@dimen/filelist_imagewh_width"
		    android:layout_height="wrap_content"
	    	android:textSize="@dimen/filelist_tag_text_size"
		    android:text="@string/filelist_tag_wh"
		    android:visibility="gone"
		    android:gravity="right"
		    android:layout_marginRight="20dp"/>
        
	    <LinearLayout 
		    android:layout_width="@dimen/filelist_date_width"
		    android:layout_height="wrap_content"
		    android:gravity="right"
			android:layout_marginRight="@dimen/filelist_vertical_distance">
	        <ImageView 
		        android:id="@+id/filelist_tag_time_sorticon"
			    android:layout_width="@dimen/filelist_tag_text_size"
			    android:layout_height="@dimen/filelist_tag_text_size"
			    android:scaleType="fitCenter"
			    android:layout_gravity="center_vertical"
			    android:visibility="gone"/>
	        <TextView 
		        android:id="@+id/filelist_tag_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
		    	android:gravity="right"
		    	android:textSize="@dimen/filelist_tag_text_size"
			    android:text="@string/filelist_tag_time"/>
	    </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/filelist_listview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="@null"
		android:background="@color/transparent"
	    android:layout_margin="@dimen/filelist_vertical_distance" />
			
</LinearLayout>
