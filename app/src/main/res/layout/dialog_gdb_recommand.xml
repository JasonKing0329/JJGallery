<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gdb_recommend_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <ProgressBar
        android:id="@+id/gdb_recommend_progress"
        style="@android:style/Widget.ProgressBar.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/gdb_recommend_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gdb_recommend_image"
        android:background="@color/gdb_float_infor_bg"
        android:padding="10dp">
        <ImageView
            android:id="@+id/gdb_recommend_setting"
            style="@style/GdbRecommendActionIcon"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_settings_white_36dp"/>
        <LinearLayout
            android:id="@+id/gdb_recommend_click_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/gdb_recommend_setting">
            <TextView
                android:id="@+id/gdb_recommend_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/gdb_recommend_bottom">
        <ImageView
            android:id="@+id/gdb_recommend_previous"
            style="@style/GdbRecommendActionIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_navigate_before_white_36dp" />
        <ImageView
            android:id="@+id/gdb_recommend_next"
            style="@style/GdbRecommendActionIcon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_navigate_next_white_36dp"/>
    </RelativeLayout>
</RelativeLayout>