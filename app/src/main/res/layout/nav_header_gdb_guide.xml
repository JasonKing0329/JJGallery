<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/theme_dark"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/group_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_oval_transgrey">
        <ImageView
            android:id="@+id/iv_folder"
            android:layout_width="@dimen/gdb_home_nav_icon_size"
            android:layout_height="@dimen/gdb_home_nav_icon_size"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/selector_ic_folder"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/group_folder"
        android:layout_alignBottom="@id/group_folder"
        android:layout_toLeftOf="@id/group_folder"
        android:background="@drawable/shape_oval_transgrey">
        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="@dimen/gdb_star_header_icon_size"
            android:layout_height="@dimen/gdb_star_header_icon_size"
            android:layout_margin="10dp"
            android:src="@drawable/selector_ic_face"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
</RelativeLayout>
