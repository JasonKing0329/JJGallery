<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gdb_star_header_height"
            android:src="@drawable/default_folder_item_bg"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_favor"
            android:layout_width="@dimen/gdb_record_icon_size"
            android:layout_height="@dimen/gdb_record_icon_size"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:padding="@dimen/gdb_record_icon_padding"
            android:src="@drawable/selector_favor_red_white"
            android:background="@drawable/shape_oval_transgrey"
            android:layout_alignBottom="@id/iv_record"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/tv_star_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/gdb_swipe_star_name_top"
            android:textSize="@dimen/gdb_swipe_star_name_text"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <com.jing.app.jjgallery.viewsystem.publicview.CircleImageView
            android:id="@+id/iv_star"
            android:layout_width="@dimen/gdb_swipe_star_circle_size"
            android:layout_height="@dimen/gdb_swipe_star_circle_size"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/gdb_swipe_star_circle_top"
            app:civ_border_color="@color/white"
            app:civ_border_width="4dp"/>
    </RelativeLayout>
</LinearLayout>