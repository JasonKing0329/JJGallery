<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/sorder_expan_item_padding_ver"
    android:paddingBottom="@dimen/sorder_expan_item_padding_ver" 
    android:paddingLeft="@dimen/sorder_expan_item_padding_hori"
    android:paddingRight="@dimen/sorder_expan_item_padding_hori">
    
    <ImageView 
        android:id="@+id/sorder_list_child_cover"
	    android:layout_width="@dimen/sorder_expan_item_cover_size"
	    android:layout_height="@dimen/sorder_expan_item_cover_size"
	    android:scaleType="fitXY"
        />
	<TextView
       	android:id="@+id/sorder_list_child_name"
       	android:layout_marginLeft="10dp"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"/>

	<LinearLayout 
       	android:id="@+id/sorder_list_child_preview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="@dimen/sorder_expan_item_padding_hori"
	    android:visibility="gone"
	    android:orientation="horizontal">
	    <ImageView 
	        android:id="@+id/sorder_list_child_img1"
		    android:layout_width="@dimen/sorder_expan_item_image_size"
		    android:layout_height="@dimen/sorder_expan_item_image_size"
		    android:scaleType="fitXY"
	    	android:visibility="gone"/>
	    
	    <ImageView 
	        android:id="@+id/sorder_list_child_img2"
		    android:layout_width="@dimen/sorder_expan_item_image_size"
		    android:layout_height="@dimen/sorder_expan_item_image_size"
		    android:scaleType="fitXY"
	    	android:visibility="gone"/>
	    
	    <ImageView 
	        android:id="@+id/sorder_list_child_img3"
		    android:layout_width="@dimen/sorder_expan_item_image_size"
		    android:layout_height="@dimen/sorder_expan_item_image_size"
		    android:scaleType="fitXY"
	    	android:visibility="gone"/>
	    
	    <ImageView 
	        android:id="@+id/sorder_list_child_img4"
		    android:layout_width="@dimen/sorder_expan_item_image_size"
		    android:layout_height="@dimen/sorder_expan_item_image_size"
		    android:scaleType="fitXY"
	    	android:visibility="gone"/>
	    
	    <ImageView 
	        android:id="@+id/sorder_list_child_img5"
		    android:layout_width="@dimen/sorder_expan_item_image_size"
		    android:layout_height="@dimen/sorder_expan_item_image_size"
		    android:scaleType="fitXY"
	    	android:visibility="gone"/>
	    
	</LinearLayout>
    <ImageView 
        android:id="@+id/sorder_list_child_showpreview"
	    android:layout_width="@dimen/custom_dialog_toolbar_icon"
	    android:layout_height="@dimen/custom_dialog_toolbar_icon"
	    android:src="@drawable/actionbar_thumb"
	    android:background="@drawable/selector_custom_dialog_icon_bk"
	    android:padding="5dp"
	    android:scaleType="fitCenter"/>
</LinearLayout>
