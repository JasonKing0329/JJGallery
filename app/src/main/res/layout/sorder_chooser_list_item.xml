<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
	<ImageView
		android:id="@+id/sorder_chooser_list_preview"
		android:layout_width="@dimen/sorder_chooser_preview_width"
		android:layout_height="@dimen/sorder_chooser_preview_width"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_apps_white_36dp"
		android:layout_marginLeft="20dp"/>
	<com.github.siyamed.shapeimageview.CircularImageView
		android:id="@+id/sorder_chooser_list_img"
		android:layout_width="@dimen/sorder_chooser_img_size"
		android:layout_height="@dimen/sorder_chooser_img_size"
		android:src="@drawable/ic_folder_sub"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp"/>
	<TextView
	    android:id="@+id/sorder_chooser_list_text"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:textSize="20sp"
		android:textColor="@color/black"/>
</LinearLayout>