                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/gdb_record_star1_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/gdb_record_page_star1_img_height"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/gdb_record_star1_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/gdb_record_star2_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/gdb_record_page_star1_img_height"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/gdb_record_star2_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center" />
                </LinearLayout>
