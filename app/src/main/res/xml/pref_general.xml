<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="@string/filemanager"
        android:entries="@array/pref_general_list_home"
        android:entryValues="@array/pref_general_list_home_value"
        android:key="pref_general_list_home"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_general_home_title"/>

</PreferenceScreen>
