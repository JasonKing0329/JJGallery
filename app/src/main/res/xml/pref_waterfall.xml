<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@integer/waterfall_column"
        android:inputType="number"
        android:key="pref_waterfall_column"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/setting_waterfall_column" />

    <EditTextPreference
        android:defaultValue="@integer/waterfall_column_land"
        android:inputType="number"
        android:key="pref_waterfall_land_column"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/setting_waterfall_column_land" />
</PreferenceScreen>